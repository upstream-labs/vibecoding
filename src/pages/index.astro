---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Robrix - A Rust Matrix Client Built on Robius',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download Now',
        href: 'https://github.com/project-robius/robrix/releases',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'View Source', href: 'https://github.com/project-robius/robrix', target: '_blank' },
    ]}
    image={{
      src: '~/assets/images/logo.jpg',
      alt: 'Robrix Logo'
    }}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline">A Pure Rust</span>
      <span class="text-accent dark:text-white"> Matrix Client</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Robrix</span> is a Matrix chat client written in Rust demonstrating Project Robius,
        a framework for multi-platform application development. Built with the Makepad UI toolkit.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Robrix: Rust Matrix Client.</span>
      Available on macOS, Linux, Windows, Android, and iOS. Experience secure, decentralized messaging.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Modern Matrix Client Features"
    subtitle="Built with Rust for performance, security, and cross-platform compatibility."
    items={[
      {
        title: 'Cross-Platform Support',
        description:
          'Native applications for macOS, Linux, Windows, Android, and iOS. Build once, run everywhere with Project Robius.',
        icon: 'tabler:devices',
      },
      {
        title: 'End-to-End Encryption',
        description:
          'Full E2EE support with device verification. Your private messages stay private with Matrix security features.',
        icon: 'tabler:lock',
      },
      {
        title: 'Rich Media Support',
        description:
          'Display images, HTML-formatted messages, reactions, and link previews. Share files and multimedia content seamlessly.',
        icon: 'tabler:photo',
      },
      {
        title: 'Real-time Messaging',
        description:
          'Instant message delivery, read receipts, typing indicators, and presence information. Fast and responsive chat experience.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Sliding Sync Support',
        description:
          'Modern Matrix protocol support with efficient Sliding Sync for optimal performance and bandwidth usage.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Open Source',
        description:
          'Fully open-source with permissive licensing. Contribute to the project and customize it for your needs.',
        icon: 'tabler:brand-git',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Technology Stack"
    title="Built on Modern Foundations"
    items={[
      {
        title: 'Rust Programming Language',
        description: 'Memory-safe, high-performance language ensuring security and speed across all platforms.',
      },
      {
        title: 'Project Robius Framework',
        description: 'Multi-platform application development framework for building native apps that run everywhere.',
      },
      {
        title: 'Makepad UI Toolkit',
        description: 'Modern, immediate mode UI framework providing responsive and beautiful user interfaces.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1526379095098-d400fd0bf935?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Rust code development',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Powered by Rust</h3>
      Experience the performance and safety of systems programming in a modern chat client
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    id="testimonials"
    tagline="Recognition"
    title="Presented at Major Conferences"
    subtitle="Robrix has been featured at leading Rust and open source conferences worldwide."
    testimonials={[
      {
        title: "GOSIM China 2024",
        testimonial: "An impressive demonstration of Rust's capabilities for cross-platform application development. Robrix shows the future of native Rust applications.",
        name: "GOSIM Conference",
        job: "China 2024",
        image: {
          src: 'https://images.unsplash.com/photo-1540575167068-54876b65299f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=256&q=80',
          alt: 'GOSIM Conference'
        }
      },
      {
        title: "Matrix Live Interview",
        testimonial: "A fascinating project that bridges the gap between systems programming and user applications. Project Robius enables true cross-platform development in Rust.",
        name: "Matrix Live",
        job: "Official Matrix Podcast",
        image: {
          src: 'https://images.unsplash.com/photo-1611224923853-80b023f02d71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=256&q=80',
          alt: 'Matrix Live Podcast'
        }
      },
      {
        title: "GOSIM Europe 2024",
        testimonial: "Robrix represents a significant step forward for Rust in the mobile and desktop application space. The cross-platform nature is truly impressive.",
        name: "GOSIM Conference",
        job: "Europe 2024",
        image: {
          src: 'https://images.unsplash.com/photo-1464207687429-7505649dae38?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=256&q=80',
          alt: 'GOSIM Europe Conference'
        }
      }
    ]}
  />

  <!-- Content Widget - Platform Support -->

  <Content
    id="platforms"
    tagline="Platform Support"
    title="Available on All Major Platforms"
    items={[
      {
        title: 'Desktop Platforms',
        description: 'Native apps for Windows, macOS, and Linux with full feature support and native integrations.',
      },
      {
        title: 'Mobile Platforms',
        description: 'iOS and Android apps with touch-optimized interfaces and mobile-specific features.',
      },
      {
        title: 'Emerging Platforms',
        description: 'Experimental support for OpenHarmony and future platform expansion through Project Robius.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1517430816045-df4b7de11d1d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Multi-platform devices',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Build Once, Run Everywhere</h3>
      Project Robius enables true cross-platform development from a single Rust codebase
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Download Robrix',
        href: 'https://github.com/project-robius/robrix/releases',
        target: '_blank',
        icon: 'tabler:download',
      },
      {
        variant: 'secondary',
        text: 'View Source Code',
        href: 'https://github.com/project-robius/robrix',
        target: '_blank',
        icon: 'tabler:brand-github',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Experience&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Rust-Powered Chat?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join the Matrix community and experience secure, decentralized messaging built with Rust. <br class="hidden md:inline" />Pre-built binaries available for all major platforms.
    </Fragment>
  </CallToAction>
</Layout>
